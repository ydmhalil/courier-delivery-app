# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=sqlite:///./courier.db
# For production use PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/courier_db

# JWT Security Configuration
SECRET_KEY=your-super-secret-jwt-key-change-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# AI Integration (Required)
GEMINI_API_KEY=your-google-gemini-api-key-here

# Google Cloud Configuration (Required for Route Optimization)
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# Route Optimization Settings
PREFER_GOOGLE_CLOUD=true
MAX_PACKAGES_FOR_GOOGLE=100
ENABLE_ALGORITHM_COMPARISON=false

# Weather Service (Optional)
WEATHER_API_KEY=your-openweathermap-api-key
WEATHER_API_URL=http://api.openweathermap.org/data/2.5/weather

# Application Settings
DEBUG_MODE=false
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
