# Frontend Environment Variables Template
# Copy this file to .env and fill in your actual values
# NOTE: Expo requires EXPO_PUBLIC_ prefix for client-side access

# API Configuration
EXPO_PUBLIC_API_BASE_URL=http://localhost:8000
EXPO_PUBLIC_API_TIMEOUT=15000

# Weather API Configuration (Required for weather features)
EXPO_PUBLIC_WEATHER_API_KEY=your-weather-api-key-from-weatherapi.com
EXPO_PUBLIC_WEATHER_API_URL=http://api.weatherapi.com/v1/current.json

# App Configuration
EXPO_PUBLIC_APP_NAME=Cargo Delivery
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_DEBUG_MODE=false

# Location Settings
EXPO_PUBLIC_LOCATION_TIMEOUT=10000
EXPO_PUBLIC_LOCATION_ACCURACY=high

# Environment Type
EXPO_PUBLIC_ENVIRONMENT=production
